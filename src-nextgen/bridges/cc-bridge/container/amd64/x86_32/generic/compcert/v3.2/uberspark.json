/*
    uberSpark code bridges json definition
*/

{
   	/* manifest header */
	   "uberspark-manifest":{
		"manifest_node_types" : [ "uberspark-bridge-compcert" ],
		"uberspark_min_version" : "any",
		"uberspark_max_version" : "any"
	},

    "uberspark-bridge-cc" : {
		/* bridge header */
		"bridge-hdr":{
			"btype" : "container",
			"bname" : "compcert",
			"execname" : "ccomp",
			"devenv" : "amd64",
			"arch" : "x86_32",
			"cpu" : "generic",
			"version" : "v3.2",
			"path" : ".",
			"params" : [ "" ],
			"container_fname" : "uberspark_bridges.Dockerfile"
		},

		"params_prefix_obj" : "-c",
        "params_prefix_asm" : "-S",
        "params_prefix_output" : "-o",
        "params_prefix_include" : "-I"
	}

}
